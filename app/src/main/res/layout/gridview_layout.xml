<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:paddingBottom="5.0dip">

    <TextView
        android:id="@+id/vegname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5.0dip"
        android:textSize="14.0sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgrid"
            android:layout_width="120.0dip"
            android:layout_height="120.0dip"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgrid"
            android:layout_alignTop="@+id/imgrid"
            android:src="@mipmap/outofstock" />
    </RelativeLayout>

    <Button
        android:id="@+id/add_cart"
        android:layout_width="wrap_content"
        android:layout_height="35.0dip"
        android:layout_gravity="center"
        android:background="@drawable/custbutton"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:src="@mipmap/ic_add_cart"
        android:text="VIEW VARIETIES" />
</LinearLayout>